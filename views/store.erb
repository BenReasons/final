<div class="row">
    <div class="col-sm-9">
        <h1><%= @store[:store_name] %></h1>
        <p><%= @store[:description] %></p>
      
        <p class="mt-5">
            <% if @current_user %>
                <a href="/stores/<%= @store[:id] %>/reviews/new" class="btn btn-primary">Review <%= @store[:store_name] %></a>
            <% else %>
                <a href="/logins/new" class="btn btn-danger">Please sign in to review <% @store[:store_name] %></a>
            <% end %>
        </p>
    </div>
    <div class="col-sm-3">
        <iframe
            width=100%
            height=100%
            frameborder="1" style="border:0"
            src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCtovsQvkIUWlNqtYwXY87gEd4ZSmJEhMw
                &q=<%= @lat %>,<%= @long %>&zoom=13" allowfullscreen>
        </iframe>
    </div>
</div>
<div class="row">
    <div class="col-sm-9">
        <h5>Reviews Section</h5>
        <hr class="my-sm-4">
        <% for review in @reviews %>
            <p><%= @users_table.where(id: review[:user_id]).to_a[0][:name] %></p>
            <p><%= review[:known_for] %></p>
            <p><%= review[:rating] %></p>
            <p><%= review[:comments] %></p>
            <hr class="my-sm-4">
        <% end %>
    </div>
    <div class="col-sm-3">
        <h5>Bookstore Information</h5>
        <hr class="my-sm-4">
        <p><%= @store[:address] %></p>
        <p><%= @store[:city] %>, <%= @store[:zip_code] %></p>
        <p><%= @store[:phone_number] %></p>
        <p>Store Rating: <%= @avg_rating %></p>
        <a href="<%= @store[:website] %>" target="_blank">Website</a>
    </div>
</div>