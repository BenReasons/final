<h1>Sign Up</h1>

<div class="row">
    <div class="col-sm-12">
        <form action="/users/create" method="post">
            <div class="form-group">
                <label>Username</label>
                <input type="text" class="form-control" placeholder="BookLover3000" name="name">
                <small class="form-text text-muted">This will be visible to the public</small>
            </div>
            <div class="form-group">
                <label>Email Address</label>
                <input type="email" class="form-control" placeholder="name@example.com" name="email">
                <small class="form-text text-muted">Your contact information will not be shared!</small>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>
    </div>
</div>