<h1>Review for <%= @store[:store_name] %></h1>

<form action="/stores/<%= @store[:id] %>/reviews/create">
    <div class="form-group">
        <label>User Name</label>
        <textarea class="form-control" rows="1" name="user_name"></textarea>
    </div>
    <div class="form-group">
        <label>Rating</label>
        <select class="form-control" name="rating">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </div>
    <div class="form-group">
        <label>Known For</label>
        <select class="form-control" name="known_for">
            <option>Science Fiction</option>
            <option>Fantasy</option>
            <option>Mystery</option>
            <option>Romance</option>
            <option>Classic Literature</option>
        </select>
    </div>
    <div class="form-group">
        <label>Comments</label>
        <textarea class="form-control" rows="3" name="comments"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit Review</button>
</form>